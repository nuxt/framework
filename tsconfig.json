{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "allowJs": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "mocha",
      "chai",
      "@nuxt/app",
      "@nuxt/nitro"
    ]
  },
  "exclude": [
    "./packages/*/dist/*",
    "./modules/*/dist/*"
  ]
}
