{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "nuxt/app/composables": ["./packages/app/src/composables"]
    }
  },
  "exclude": ["./packages/*/dist/*"]
}
