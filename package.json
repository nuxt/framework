{
  "name": "nuxt-framework",
  "license": "MIT",
  "workspaces": [
    "scripts/",
    "packages/*"
  ],
  "scripts": {
    "link": "lerna link",
    "build": "pkg --all",
    "stub": "pkg --all --stub",
    "gentypes": "yarn workspace @nuxt/kit jiti ./scripts/gentypes",
    "release": "yarn build && lerna publish -m \"chore: release\" && yarn stub",
    "nu": "./node_modules/.bin/nu",
    "play": "yarn run nu dev playground",
    "lint": "yarn gentypes && eslint --ext .vue,.ts,.js .",
    "test": "yarn lint",
    "postinstall": "yarn stub"
  },
  "devDependencies": {
    "@nuxt/build-scripts": "workspace:scripts",
    "@nuxtjs/eslint-config": "^6.0.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "jiti": "^1.6.4",
    "lerna": "^4.0.0",
    "mkdist": "^0.1.3",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
